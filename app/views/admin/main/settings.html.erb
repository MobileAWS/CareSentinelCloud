<div class="pageheader">
  <div role="contentFor" data-contentfor="headerTitle">Settings</div>
</div>

<script language="JavaScript">
    <%
        config = SiteConfig.find_by(name: 'purge_days')
        emails_config = SiteConfig.find_by(name: 'emails_purge')
    %>
    var configValue = '<%= config.value %>';
    var configChecked = '<%= config.enabled %>';
    var emailsConfig = '<%= emails_config.value if !emails_config.nil? %>';
</script>

<%= javascript_include_tag "application/user/config" %>
<div id="successAlert" class="alert alert-success" style="display: none;"><a href="#" class="close" onclick="$('#successAlert').hide();">&times;</a><div id="successAlertMsg"></div></div>
<div id="errorAlert" class="alert alert-danger" style="display: none;"><a href="#" class="close" onclick="$('#errorAlert').hide();">&times;</a><div id="errorAlertMsg"></div></div>
<div class="col-sm-2">
    <label>Purge Days</label><br/>
    <div class="btn-group" role="group" aria-label="purgegroup">
      <div class="radio">
        <label>
          <input type="radio" name="purge_days" id="purge_days_30" value="30">
          30 Days
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="purge_days" id="purge_days_45" value="45">
          45 Days
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="purge_days" id="purge_days_90" value="90">
          90 Days
        </label>
      </div>
      <div class="checkbox">
        <label>
            <input type="checkbox" id="purge_enable">
            Enabled
        </label>
      </div>
    </div>
</div>
<div class="col-sm-4">
    <label>Notification Emails (Comma separated)</label><br/>
    <input type="text" class="form-control" name="emails_purge" id="emails_purge"><br/>
    <span class="responsive-icon-button btn btn-primary" id="btn_emails_purge">Save</span>
</div>