<form class="entity-input-form" data-entity="<%= params[:entityName]%>" role="form">
    <input type="hidden" name="skip_confirm" value="true" />
    <% if !@targetEntity.id.nil? then %>
            <input type="hidden" name="customer_id" role="entity-id" required="true" value="<%= @targetEntity.id %>"/>
    <% end %>
  <div class="form-group">
      <label for="email">Customer ID</label>
      <input type="text" class="form-control" id="customer_number" name="customer_number" required="true" value="<%= @targetEntity.customer_id%>"/>
  </div>
</form>