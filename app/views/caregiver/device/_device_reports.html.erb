<div class="form-group">
  <label>Device Name</label>

  <div class="input-group col-lg-4">
    <%= render "general/components/autocomplete", :targetValue => '', :targetLabel => '', :service => '/devicemapping/suggestions', :prefix_id => 'device', :placeholder => 'Type to search device', :onSelect => 'deviceSelect' %>
  </div>
</div>

<div class="form-group input-group">
  <div class="col-lg-3 remove-padding-left">
    <label for="propertiesSelect">Sensor Name</label><br/>
    <select class="dropdown select" id="propertiesSelect" name="propertiesSelect">
      <option value="">Select a Device</option>
    </select>
  </div>
  <div class="col-lg-3">
    <label for="start_date">Start Date</label>
    <input type="text" id="start_date" name="start_date" role='datetime-picker' class="form-control">
  </div>
  <div class="col-lg-3" style="padding-left: 5px !important;">
    <label for="end_date">End Date</label>
    <input type="text" id="end_date" name="end_date" role='datetime-picker' class="form-control">
  </div>
</div>

<div class="form-group">
<button class="btn btn-primary" disabled id="historicReportButton" type="button" aria-expanded="false" aria-controls="historicReport">
  Historic Report
</button>

<button class="btn btn-primary" disabled id="averageReportButton" type="button" aria-expanded="false" aria-controls="averageReport">
  Average Report
</button>
</div>

<div class="collapse" id="historicReport">
  <%= link_to "Export Historic Report", {controller: "caregiver", action: "export_historic_report", token: params[:token], format: "csv"}, class: "btn btn-primary", id: "linkExportHistoric" %>
</div>

<div class="collapse" id="averageReport">
  <%= link_to "Export Average Report", {controller: "caregiver", action: "export_average_report", token: params[:token], format: "csv"}, class: "btn btn-primary", id: "linkExportAverage" %>
</div>

<div>
  <%= render 'general/chart' %>
</div>