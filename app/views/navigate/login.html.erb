<%= javascript_include_tag 'application/login.js' %>
<div class="container">
  <form class="form-signin text-center" role="form" id="signinForm" action="users/login" method="get">
    <div class="title"></div>
    <div class="inner-form">
      <input name="email" type="email" class="form-control" placeholder="Email address" required autofocus>
      <input name="password" type="password" class="form-control" placeholder="Password" required>
      Site: <select name="site" id="site" required></select><br/>
      <span class="error-message hidden-element">Incorrect username or password for this site</span>
      <button id="signinButton" class="btn btn-lg btn-primary btn-block submit-button">Sign in</button>
    </div>
  </form>
</div>