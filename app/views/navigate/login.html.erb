<%= javascript_include_tag 'application/login.js' %>

<div class="container">
  <form class="form-signin text-center" role="form" id="signinForm" action="users/login" method="get">
    <input type="hidden" id="site_name" name="site_name">
    <div class="title"></div>
    <div class="inner-form">
      <input name="email" type="email" class="form-control" placeholder="Email address" required autofocus>
      <input name="password" type="password" class="form-control" placeholder="Password" required>
      <input name="customer_id" type="text" class="form-control" placeholder="Customer ID">

      <%= render "general/components/autocomplete", :targetValue => '', :targetLabel => '', :service => '/site/suggestions', :prefix_id => 'site', :placeholder => 'Site' %>

      <br/><span class="error-message hidden-element">Incorrect username or password for this site</span>


      <button id="signinButton" class="btn btn-lg btn-primary btn-block submit-button">Sign in</button><br/>
      <a href="#" data-toggle="modal" data-target="#forgotModal" style="float: right;">
        Reset password
      </a><br/>
    </div>
  </form>
  <form class="hidden-element" method="post" id="formHome">
        <input type="hidden" id="token" name="token">
  </form>
</div>

<div class="modal fade" id="forgotModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Reset Password</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
            <form role="form" id="resetpasswordForm" action="user/resetPassword" method="post">
              <label for="email">Email</label>
              <input name="email" type="email" class="form-control" placeholder="Email address" required autofocus>
              <span class="error-message hidden-element">Incorrect username or password for this site</span>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary submit-button">Reset</button>
              </div>
            </form>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="modalResetOk" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Instructions</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
            <span class="success-message">Instructions Sent</span>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>